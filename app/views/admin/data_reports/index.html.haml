-require 'date'
=provide(:title,'Stats reports')
%h5.listing-header Stats reports
%h6.listing-header Generated date: #{Date.today}
.container
  .row
    .col-md
      %h5.listing-header
        Occupation rate
      %h6.occupation_rate #{@occupied_rooms_reservations.length} room(s) occupied out of #{@number_of_rooms} available
      %h6.listing-header Rooms currently occupied
      %h6.listing-header [#{display_occupied_rooms_numbers(@occupied_rooms_reservations)}]
    .col-md
      %h5.listing-header
        Revenu for the day
      %h6.listing-header
        #{format_room_price(display_revenu_of_day(@occupied_rooms_reservations))}$
    .col-md
      %h5.listing-header
        Rooms to clean today
      .center-form
        %ul
        -@rooms_to_clean.each do |room|
          %li
            .cleaning_room_number room ##{room.room.room_num}
